<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>管理端配置-外置屏管理-新增显示屏</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../dist/css/jquery.mCustomScrollbar.css">
    <link rel="stylesheet" href="../../dist/css/main.css">
    <link rel="stylesheet" href="../../dist/css/ling.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="../../dist/js/html5shiv.js"></script>
        <script src="../../dist/js/respond.min.js"></script>
        <![endif]-->
    
</head>

<body class="index-page">
    <div class="modal-content ake-iframe-modal">
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">所属通道:</label>
                    <div class="col-xs-6">
                       <select class="form-control" id="">
                           <option>通道1</option>
                           <option>通道2</option>
                           <option>通道3</option>
                           <option>通道4</option>
                       </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">名称:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">品牌:</label>
                    <div class="col-xs-6">
                       <select class="form-control" id="">
                           <option>品牌1</option>
                           <option>品牌2</option>
                           <option>品牌3</option>
                           <option>品牌4</option>
                       </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">型号:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">屏地址:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">组地址:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">传输模式:</label>
                    <div class="col-xs-6">
                       <select class="form-control" id="">
                           <option>传输模式1</option>
                           <option>传输模式2</option>
                       </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">传输模式参数:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label">备注:</label>
                        <div class="col-xs-6">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="mb0 form-group">
                    <a class="col-xs-offset-9 col-xs-2 pointer set-more">更多设置</a>
                </div>
                <div class="more-setting" style="display:none;">
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">显示方式:</label>
                        <div class="col-xs-6">
                           <select class="form-control" id="">
                               <option>即显</option>
                               <option>即显</option>
                           </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">显示停留时间:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">扫描方式:</label>
                        <div class="col-xs-6">
                           <select class="form-control" id="">
                               <option>1/16A模式</option>
                               <option>1/16B模式</option>
                           </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">屏宽度:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">X轴偏移量:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">字体大小:</label>
                        <div class="col-xs-6">
                           <select class="form-control" id="">
                               <option>16*16字体</option>
                               <option>18*18字体</option>
                               <option>24*24字体</option>
                           </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">显示扩展方式:</label>
                        <div class="col-xs-6">
                           <select class="form-control" id="">
                               <option>本幕前清除屏幕内容</option>
                               <option>本幕后清除屏幕内容</option>
                           </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">显示速度:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">红色占空比:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">屏高度:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">Y轴偏移量:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label">亮度:</label>
                            <div class="col-xs-6">
                            <input type="text" class="form-control bold" id="" placeholder="" value="0">
                        </div>
                    </div>
                </div>
                <div class="mb0 form-group" style="display: none;">
                    <a class="col-xs-offset-9 col-xs-3 pointer hide-set-more">隐藏更多设置</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-default btn-flat  pull-left" id="cancel">关闭</button>
                    <button type="button" class="btn  btn-primary btn-flat pull-right" id="save">保存</button>
                </div>
            </form>
        </div>
    </div>

    <script src="../../dist/js/jquery-2.0.3.min.js"></script>
    <!-- <![endif]-->
    <!--[if IE]>
        <script src="../../dist/js/jquery-1.10.2.min.js"></script>
    <![endif]-->
    <script src="../../dist/js/bootstrap.min.js"></script>
     <script src="../../dist/js/jquery-migrate-1.2.1.min.js"></script>
     <script src="../../dist/js/jquery.mCustomScrollbar.concat.min.js"></script>
     <script type="text/javascript" src="../../dist/js/layer/layer.js"></script>
    <script src="../../dist/js/public.js"></script>
    <script type="text/javascript">
        $(function(){
            if (!$.browser.webkit) {
                $.mCustomScrollbar.defaults.scrollButtons.enable=false; //滑块的上下的button是否显示
                $.mCustomScrollbar.defaults.axis="y"; //滑块的放行 X轴或Y轴
                 $("body").mCustomScrollbar({theme:"dark"});
            }
        })
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引

            $("#cancel").on('click',function(){    
                parent.layer.close(index);   //点击关闭  会关闭iframe弹出框  
            })

            $(".set-more").click(function(){
                $(this).parent("div.form-group").css("display","none");
                $(this).parent("div.form-group").next(".more-setting").css("display","block");
                $(this).parent("div.form-group").next(".more-setting").next("div.form-group").css("display","block");
            })
            $(".hide-set-more").click(function(){
                $(this).parent("div.form-group").css("display","none");
                $(this).parent("div.form-group").prev(".more-setting").css("display","none"); 
                $(this).parent("div.form-group").prev(".more-setting").prev("div.form-group").css("display","block");
                  
            })
        </script>
</body>
</html>
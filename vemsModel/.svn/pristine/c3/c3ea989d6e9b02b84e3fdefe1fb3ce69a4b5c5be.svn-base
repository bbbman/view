    <style type="text/css">
        .modal-body .form-title{
            position: relative;
            text-align: center;
            margin-bottom: 20px;
        }
        .modal-body .form-title a{
            position: absolute;
            right: 50px;
            top:4px;
        }
        .form-group div h4{
            margin-top: 7px;
            margin-bottom: 0px;
        }
        .form-horizontal .form-group .control-label{
            font-weight: 400;
        }
        .form-group div .span-control{
            display: block;
            height: 34px;
            line-height: 34px;
            font-size: 15px;
            font-weight: 600;
        }
        .must-tc{
            text-align: center !important;
        }
        .popover-box{
          position: absolute;
          top: 38px;
          right: 50px;
          width: auto;
          min-width: 240px;
          max-width: 320px;
          max-height: 200px;
          height: auto;
          background: #FFF;
          border:1px solid #CCC;
          border-radius: 6px;
          z-index: 100;
        }
        .popover-box > .arrow,
        .popover-box > .arrow::after{
          position: absolute;
          display: block;
          top:-14px;
          left: 82%;
          width: 0;
          height: 0;
          margin-left: -7px;
          border-style: solid;
          border-color:transparent;
          border-radius: 2px;
        }
        .popover-box > .arrow{
          background: transparent;
          border-width: 14px 7px;
          border-top-width: 0;
          border-bottom-color: #CCC;
        }
        .popover-box > .arrow::after{
          content: '';
          top: 2px;
          right: -13px;
          margin-left: -6px;
          border-width: 13px 6px;
          border-top-width: 0;
          border-bottom-color: #FFF;
        }

        .popover-box .close {
          position: absolute;
          top:3px;
          right: 10px;
          font-size: 24px;
        }

        .popover-box .popover-box-body{
          color: #515151;
          text-align: left;
          padding: 20px 10px 10px;
          margin-bottom: 0;
          letter-spacing: 0.4px;
          font-size: 13px;
          max-width: 320px;
          min-width: 240px;
          max-height: 198px;
          overflow: auto;
        }
        .popover-box .popover-box-body li{
            padding: 6px 10px;
            font-size: 15px;
            border-bottom: 1px dashed #CCCCCC;
        }
        .popover-box .popover-box-body li:last-child{
            border-bottom: 0;
        }
        .popover-box .popover-box-body li label{
            margin-right: 5px;
            margin-bottom: 0px;
        }
    </style>
</head>

<body class="index-page">

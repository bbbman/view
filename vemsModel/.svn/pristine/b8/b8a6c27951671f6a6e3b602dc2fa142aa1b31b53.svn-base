<body class="login-page reset-page">
    <div class="login-wrap">
        <header>
            <img src="dist/images/top_pic.png" alt="">
        </header>
        <div class="login-box">
            <h3>重置密码</h3>
            <a href="#" class="link-back"><&nbsp;返回登录</a>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">用户名</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="用户名">
                    </div>
                    <div class="warning-tips">
                        <img src="dist/images/alarm.png" alt="">用户名不存在
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-3 control-label">验证码</label>
                    <div class="col-sm-6 yanzheng-input">
                        <input type="text" class="form-control" id="inputPassword3" placeholder="验证码">
                    </div>
                    <div class="col-sm-3 getyanzheng"><a href="#">获取验证码</a></div>
                    <div class="warning-tips">
                        <img src="dist/images/alarm.png" alt="">用户名不存在
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">新密码</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="inputEmail3" placeholder="">
                    </div>
                    <div class="warning-tips">
                        <img src="dist/images/alarm.png" alt="">用户名不存在
                    </div>
                </div>
                 <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">确认密码</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="inputEmail3" placeholder="">
                    </div>
                    <div class="warning-tips">
                        <img src="dist/images/alarm.png" alt="">用户名不存在
                    </div>
                </div>
                <div class="form-group">
                    <div class="enter-btn">
                        <button type="submit" class="btn btn-default btn-block">重置密码</button>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
    <!--[if !IE]> -->
    <script src="dist/js/jquery-2.0.3.min.js"></script>
    <!-- <![endif]-->

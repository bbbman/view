<style>
    .form-horizontal .control-label{
        text-align: left;
    }
    .btn-box{
        text-align: left;
    }
    .ake-iframe-modal .btn-box .btn{
        display: inline-block;
        border-radius: 5px;
        margin-right: 15px;
    }
    .ake-iframe-modal .btn-box .btn-default:hover{
        color:#fff;
        background-color:#25A1FF !important;
    }
    .ake-iframe-modal .btn-box .btn-active{
        color:#fff;
        background-color:#25A1FF !important;
    }
    h4{
        font-size: 16px;
        color:#999;
    }
    h3{
       text-align:right;
       font-size: 16px; 
       margin:10px 0;
    }
    .right-standard-box{
        background-color:#fff;
        padding:8px;
        padding-bottom: 0px;
        border:1px solid #dedede;
        border-radius: 3px;
    }
    .right-standard-box .charge-rule-box{
        background-color:#E9F2F6;
        margin-top: 0px;
        margin-bottom:8px;
        padding:8px 0;
    }
    .right-standard-box .charge-rule-box h4{
        margin-left: 15px;
    }
    .right-standard-box .charge-rule-box .btn-del{
        background:#F37E7C;
        width:24px;
        height: 24px;
        border-radius: 3px;
        line-height: 28px;
        text-align: center;
        color:#fff;
        margin:8px 15px;
        cursor:pointer;
    }
     .right-standard-box .charge-rule-box .form-group{
        margin:3px 0;
     }
     .add-standard-wrap{
        height:100px;
        text-align: center;
     }
     .add-standard-wrap .btn{
        margin-top:30px;
        margin-right:22px;
        border-radius:4px;
        display: inline-block;
        background-color: #3AD896;
        border:none;
        height:40px;
     }
     .add-standard-wrap .btn span{
        font-size: 14px;
        padding:3px;
     }
    .add-standard-wrap .btn:hover{
        background-color: #3AD896;
    }
    .clip-radio input[type="radio"] {
      display: none;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      cursor: pointer;
      line-height: normal;
    }
    .clip-radio label {
      cursor: pointer;
      display: inline-block;
      font-size: 16px;
      font-weight: normal;
      color: #555;
      margin-right: 15px;
      padding-left: 10px !important;
      position: relative;
      line-height: 23px;
      margin-top: -8px;
    }
    .clip-radio label .key-tag {
      color: #0099ff;
    }
    .clip-radio {
      background: url("../../dist/images/ic_standard.png") no-repeat 0 center;
      background-size: 23px 23px;
    }
    .radio-active {
      background: url("../../dist/images/ic_standard-shift.png") no-repeat 0 center;
      background-size: 23px 23px;
    }
    .form-horizontal .radio-standard{
        margin-top:-8px; 
    }
    .clip-radio .radio-standard-label{
        font-weight: 700;
        font-size: 13px;
        color: #333;  
    }
    .unit{
        height:34px;
        line-height: 34px;
        vertical-align: middle;
        display: inline-block;
        text-align: center;
    }
    .left-standard-wrap textarea{
        resize:none;
        height:80px;
    }
</style>
<body class="ake-modal-body" style="overflow-x:hidden">
    <div class="modal-content ake-iframe-modal">
        <div class="modal-body col-xs-12" style="margin-bottom:20px;background-color:#E9F2F6;">
             <div class="col-xs-12 pt0">
                <h3 class="col-xs-offset-2 col-xs-2">典型规则参考:</h3>
                <div class="btn-box col-xs-6 pt0">
                    <button type="button" class="btn btn-default">日夜区分型</button>
                    <button type="button" class="btn btn-default">固定型</button>
                    <button type="button" class="btn btn-default">分段收费型</button>
                </div>
              </div>
            <div class="left-standard-wrap col-xs-5">
              <form class="form-horizontal col-xs-12 pt0">
                <h4>基础配置</h4>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">收费标准名称*:</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" placeholder="0-30个字符">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">最小计费时长*:</label>
                    <div class="col-xs-6">
                        <input type="number" class="form-control" min="0" placeholder="">
                    </div>
                    <div class="col-xs-2">
                        <span class='unit'>分钟</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">免费时长*:</label>
                    <div class="col-xs-6">
                        <input type="number" class="form-control" min="0" placeholder="">
                    </div>
                    <div class="col-xs-2">
                        <span class='unit'>分钟</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">免费时长是否列入计费*:</label>
                    <div class="col-xs-6">
                       <div class="common-form-type is-add-charge">
                           <div class="radio clip-radio  radio-inline radio-active">
                                <input type="radio" name="normal-cartype" value="1" checked="true">
                                <label>是</label>
                            </div>
                            <div class="radio clip-radio  radio-inline">
                                <input type="radio" name="normal-cartype" value="0">
                                <label>否</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">24小时最小计费额*:</label>
                    <div class="col-xs-6">
                        <input type="number" class="form-control" min="0" placeholder="">
                    </div>
                    <div class="col-xs-1">
                        <span class="unit">元</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">24小时封顶计费额:</label>
                    <div class="col-xs-6">
                        <input type="number" class="form-control" min="0" placeholder="">
                    </div>
                    <div class="col-xs-1">
                        <span class="unit">元</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">24小时封顶结算标志:</label>
                    <div class="col-xs-6">
                        <select class="form-control">
                            <option>自然结算</option>
                            <option>强制结算</option>
                            <option>封顶结算</option>
                        </select>
                    </div>
                </div>
                <div class="form-group standard-group">
                    <label for="" class="col-xs-4 control-label">
                         <div class="radio clip-radio  radio-inline radio-standard">
                            <input type="radio" name="is-user-defined" value="1">
                            <label class="radio-standard-label">自定义封顶计费:</label>
                        </div>
                    </label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" min="0" placeholder="0" disabled="disabled">
                    </div>
                    <div class="col-xs-2">
                      <span class="unit">分钟</span>
                    </div>
                </div>
                <div class="form-group standard-group">
                    <div class="col-xs-offset-4 col-xs-6">
                        <input type="text" class="form-control"  placeholder="0.0" disabled="disabled">
                    </div>
                    <div class="col-xs-1">
                        <span class="unit">元</span>
                    </div>
                </div>
                <div class="form-group standard-group">
                    <div class="col-xs-offset-4 col-xs-6">
                        <select class="form-control" disabled="disabled">
                            <option>自然结算</option>
                            <option>强制结算</option>
                            <option>封顶结算</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-4 control-label">备注:</label>
                </div>
                <div class="form-group">
                    <div class="col-xs-10">
                        <textarea class="form-control" placeholder="0-255个字符"></textarea>  
                    </div>
                 </div>
               </form>
            </div>
            <div class="right-standard-wrap col-xs-7 pt0">
                <h4>详细规则配置</h4>
                <div class="col-xs-12 pt0 right-standard-box">
                    <div class="form-horizontal col-xs-12 pt0 charge-rule-box">
                        <div class="col-xs-12 pt0 charge-rule-header">
                            <h4 class="pull-left">收费时段1</h4>
                        </div>
                        <div class="form-group daterange-box col-xs-12 pt0">
                            <label for="" class="pull-left control-label col-xs-2">时间区间:</label>
                            <div class="col-xs-10 pt0">
                                <div class="input-daterange input-group" style="text-align:left;">
                                    <input type="text" class="form-control input-daterange-start" style="width:120px;display:inline-block;float:none;" />
                                    <span class="input-group-addon" style="display:inline-block;width:40px;height:34px;line-height:20px;margin-top:-3px;">至</span>
                                    <input type="text" class="form-control input-daterange-end" style="width:120px;display:inline-block;float:none;" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">收费方式:</label>
                            <div class="col-xs-8 pt0">
                                <select class="form-control">
                                    <option  value="1">方式1</option>
                                    <option  value="2">方式2</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">最高收费:</label>
                            <div class="col-xs-8 pt0">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">收费单价:</label>
                            <div class="col-xs-8 pt0">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">收费单位:</label>
                            <div class="col-xs-8 pt0">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">步长类型:</label>
                            <div class="col-xs-8 pt0">
                                <select class="form-control">
                                    <option  value="1">类型1</option>
                                    <option value="2">类型2</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-xs-6 pt0">
                            <label for="" class="col-xs-4 control-label">结算类型:</label>
                            <div class="col-xs-8 pt0">
                                <select class="form-control">
                                    <option value="1">自然结算</option>
                                    <option  value="2">强制结算</option>
                                    <option  value="3">封顶结算</option>
                                </select>
                            </div>
                        </div>
                    </div> 
                    <div class="add-standard-wrap  col-xs-12 pt0">
                         <button type="button" class="btn  btn-primary btn-flat" id="add-row">
                         <span class="icon-plus" aria-hidden="true"></span>添加计费区间
                         </button>
                         <button type="button" class="btn  btn-primary btn-flat" id="copy-row">
                         <span class="icon-copy" aria-hidden="true"></span>复制计费区间
                         </button>
                    </div>
                </div> 
            </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn  btn-default btn-flat  pull-left close-modal" data-dismiss="modal">取消</button>
                    <button type="button" class="btn  btn-primary btn-flat pull-right" id="btn-save">保存</button>
                </div>
            </form>
        </div>
    </div>
    <!--[if !IE]> -->
    <script src="../../dist/js/jquery-2.0.3.min.js"></script>
    <!-- <![endif]-->
    <!--[if IE]>
     <script src="../../dist/js/jquery-1.10.2.min.js"></script>
 <![endif]-->
    <script src="../../dist/js/jquery-ui.min.js"></script>
    <script src="../../dist/js/jquery-ui-timepicker-addon.min.js"></script>
    <script src="../../dist/js/jquery-ui-timepicker-zh-CN.js"></script>
    <script>
    $(function() {
        $(".close-modal").on("click", function() {
            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
            parent.layer.close(index);
        });


        $(".input-daterange-start").timepicker({
            timeFormat: "HH:mm:ss"
        });
       $('.input-daterange-end').timepicker({
            timeFormat: "HH:mm:ss"
        });

        //初始化单选项效果
       $(document).on('click','.is-add-charge .clip-radio',function(e){
          var This=$(e.currentTarget);
          if(This.hasClass('radio-active')){
             return; 
          }else{
              This.siblings('.clip-radio').removeClass('radio-active');
              This.siblings('.clip-radio').find('input').attr('checked',false);
              This.addClass('radio-active');
              This.find('input[type="radio"]').attr('checked',true);
          }
        });

         $(document).on('click','.radio-standard',function(e){
             var This=$(e.currentTarget);
              if(This.hasClass('radio-active')){
                  This.removeClass('radio-active');
                   This.find('input[type="radio"]').attr('checked',false);
                   $('.standard-group input[type="text"], .standard-group select').attr('disabled','disabled');
              }else{
                  This.addClass('radio-active');
                  This.find('input[type="radio"]').attr('checked',true);
                   $('.standard-group input[type="text"], .standard-group select').removeAttr('disabled','disabled')
              }
        });
        //新增收费规则modal添加一行与删除
        $('#add-row').on('click', function() {
            $('.input-daterange-start').off().removeClass('hasDatepicker');
            $('.input-daterange-end').off().removeClass('hasDatepicker');
            var $row = $('.charge-rule-box').eq(0).clone();
            $row.find('input').val('');
            $row.find('select option:first').prop("selected", 'sekected');
             $row.find('.charge-rule-header h4').text('收费时段'+($('.charge-rule-box').length+1));
            $row.find('.charge-rule-header').append('  <a class="pull-right btn-del"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>');
            $('.add-standard-wrap').before($row);
            $(".input-daterange-start").timepicker({
                timeFormat: "HH:mm:ss"
            });
            $('.input-daterange-end').timepicker({
                timeFormat: "HH:mm:ss"
            });
        });
        $(document).on('click', '.charge-rule-box .btn-del', function(e) {
            var $this = $(e.target);
            $(this).closest('.charge-rule-box').remove();
        });

        //新增收费规则modal复制一行
        $('#copy-row').on('click', function() {
            $('.input-daterange-start').off().removeClass('hasDatepicker');
            $('.input-daterange-end').off().removeClass('hasDatepicker');
            var l=$('.charge-rule-box').length;
            var $row = $('.charge-rule-box').eq(l-1).clone();
            $row.find('.charge-rule-header h4').text('收费时段'+(l+1));
            if($row.find('.charge-rule-header .btn-del').length<=0){
                $row.find('.charge-rule-header').append('<a class="pull-right btn-del"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>');
            }
             var k= $('.charge-rule-box').eq(l-1).find('select'); 
             var i=0;
            $row.find('select').each(function(){
                $(this).val(k.eq(i).val());
                i++;
             });
            $('.add-standard-wrap').before($row);
            $(".input-daterange-start").timepicker({
                timeFormat: "HH:mm:ss"
            });
            $('.input-daterange-end').timepicker({
                timeFormat: "HH:mm:ss"
            });
        });

        //获取规则参考
        $('.btn-box .btn').on('click',function(){
            if($(this).hasClass('btn-active')){
                return;
            }
            $('.btn-box .btn').removeClass('btn-active');
            $(this).addClass('btn-active');

        });

    })
    </script>
</body>

</html>
